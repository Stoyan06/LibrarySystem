@{
    ViewData["Title"] = "Качи изображение";
}

<head>
    <title>@ViewData["Title"] - Библиотечна система</title>
    <!-- Include Bootstrap CSS for better styling -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
</head>

<h2 class="mb-4 text-center">Качи изображение</h2>

@if (ViewBag.Error != null)
{
    <div class="alert alert-danger text-center">
        <strong>Грешка!</strong> @ViewBag.Error
    </div>
}

<form method="post" enctype="multipart/form-data" asp-action="UploadFile" class="w-75 mx-auto p-4 border rounded shadow-sm bg-light">
    <div class="mb-3">
        <label for="imageInput" class="form-label fw-bold">Изберете изображение</label>
        <input type="file" name="image" id="imageInput" class="form-control" required />
        <div class="form-text">Моля, изберете изображение от вашия компютър за качване.</div>
    </div>

    <div class="d-flex justify-content-between mt-4">
        <button type="submit" class="btn btn-primary btn-lg px-4">Качи</button>
    </div>
</form>

@if (ViewBag.ImageUrl != null)
{
    <div class="mt-4 text-center">
        <p>Изображението беше успешно качено!</p>
        <img src="@ViewBag.ImageUrl" width="300" class="img-fluid" />
    </div>
}

<!-- Include Bootstrap JS for responsiveness and interactivity -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
