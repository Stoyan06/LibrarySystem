@{
    ViewData["Title"] = "Библиотекарски Панел";
}

<div class="container py-4">
    <div class="row mb-4">
        <div class="col-12 text-center">
            <h2 class="fw-bold">Библиотекарски Панел</h2>
            <p class="text-muted">Управление на библиотечната система</p>
        </div>
    </div>
    
    <div class="row g-4 justify-content-center">
        <!-- Manage Authors -->
        <div class="col-sm-6 col-md-4 col-lg-4">
            <a asp-area="" asp-controller="Author" asp-action="AllAuthors" class="admin-card">
                <div class="card h-100 text-center shadow-sm">
                    <div class="card-body d-flex flex-column">
                        <div class="icon-wrapper mb-2">
                            <i class="bi bi-person-lines-fill admin-icon"></i>
                        </div>
                        <h5 class="card-title">Управление на автори</h5>
                        <p class="card-text small">Добавяне, редактиране и премахване на автори.</p>
                    </div>
                    <div class="card-footer bg-transparent border-0">
                        <span class="btn btn-sm btn-outline-primary">Преглед</span>
                    </div>
                </div>
            </a>
        </div>
        
        <!-- Manage Titles -->
        <div class="col-sm-6 col-md-4 col-lg-4">
            <a asp-area="" asp-controller="Title" asp-action="AllTitles" class="admin-card">
                <div class="card h-100 text-center shadow-sm">
                    <div class="card-body d-flex flex-column">
                        <div class="icon-wrapper mb-2">
                            <i class="bi bi-book admin-icon"></i>
                        </div>
                        <h5 class="card-title">Управление на заглавия</h5>
                        <p class="card-text small">Добавяне, редактиране и премахване на заглавия.</p>
                    </div>
                    <div class="card-footer bg-transparent border-0">
                        <span class="btn btn-sm btn-outline-primary">Преглед</span>
                    </div>
                </div>
            </a>
        </div>
        
        <!-- Manage Sections -->
        <div class="col-sm-6 col-md-4 col-lg-4">
            <a asp-area="" asp-controller="Section" asp-action="AllSections" class="admin-card">
                <div class="card h-100 text-center shadow-sm">
                    <div class="card-body d-flex flex-column">
                        <div class="icon-wrapper mb-2">
                            <i class="bi bi-folder admin-icon"></i>
                        </div>
                        <h5 class="card-title">Управление на раздели</h5>
                        <p class="card-text small">Добавяне, редактиране и премахване на раздели.</p>
                    </div>
                    <div class="card-footer bg-transparent border-0">
                        <span class="btn btn-sm btn-outline-primary">Преглед</span>
                    </div>
                </div>
            </a>
        </div>
        
        <!-- Manage Library Units -->
        <div class="col-sm-6 col-md-4 col-lg-4">
            <a asp-area="" asp-controller="LibraryUnit" asp-action="AllLibraryUnits" class="admin-card">
                <div class="card h-100 text-center shadow-sm">
                    <div class="card-body d-flex flex-column">
                        <div class="icon-wrapper mb-2">
                            <i class="bi bi-archive admin-icon"></i>
                        </div>
                        <h5 class="card-title">Управление на библиотечни единици</h5>
                        <p class="card-text small">Добавяне, редактиране и премахване на библиотечни единици.</p>
                    </div>
                    <div class="card-footer bg-transparent border-0">
                        <span class="btn btn-sm btn-outline-primary">Преглед</span>
                    </div>
                </div>
            </a>
        </div>
        
        <!-- Borrow/Return Units -->
        <div class="col-sm-6 col-md-4 col-lg-4">
            <a asp-area="" asp-controller="Movement" asp-action="Register" class="admin-card">
                <div class="card h-100 text-center shadow-sm">
                    <div class="card-body d-flex flex-column">
                        <div class="icon-wrapper mb-2">
                            <i class="bi bi-arrow-left-right admin-icon"></i>
                        </div>
                        <h5 class="card-title">Заемане/Връщане на единица</h5>
                        <p class="card-text small">Управление на заемането и връщането на книги.</p>
                    </div>
                    <div class="card-footer bg-transparent border-0">
                        <span class="btn btn-sm btn-outline-primary">Преглед</span>
                    </div>
                </div>
            </a>
        </div>

        
        <div class="col-sm-6 col-md-4 col-lg-4">
            <a asp-area="" asp-controller="Librarian" asp-action="AllReaders" class="admin-card">
                <div class="card h-100 text-center shadow-sm">
                    <div class="card-body d-flex flex-column">
                        <div class="icon-wrapper mb-2">
                            <i class="bi bi-person-lines-fill admin-icon"></i>
                        </div>
                        <h5 class="card-title">Преглед на читателите</h5>
                        <p class="card-text small">Преглед на читателите и тяхната история.</p>
                    </div>
                    <div class="card-footer bg-transparent border-0">
                        <span class="btn btn-sm btn-outline-primary">Преглед</span>
                    </div>
                </div>
            </a>
        </div>
    </div>
</div>

@section Styles {
    <style>
        .admin-card {
            text-decoration: none;
            color: inherit;
            display: block;
            height: 100%;
            transition: all 0.3s ease;
        }
        
        .admin-card:hover {
            transform: translateY(-5px);
            color: inherit;
        }
        
        .admin-card:hover .card {
            box-shadow: 0 5px 15px rgba(0, 0, 0, 0.1);
            border-color: rgba(13, 110, 253, 0.3);
        }
        
        .card {
            border-radius: 8px;
            border: 1px solid rgba(0, 0, 0, 0.08);
            overflow: hidden;
            transition: all 0.3s ease;
            height: 100%;
        }
        
        .icon-wrapper {
            display: flex;
            align-items: center;
            justify-content: center;
            height: 40px;
        }
        
        .admin-icon {
            font-size: 1.5rem;
            color: #0d6efd;
            transition: all 0.3s ease;
        }
        
        .admin-card:hover .admin-icon {
            transform: scale(1.1);
        }
        
        .card-title {
            font-weight: 600;
            font-size: 1rem;
            margin-bottom: 0.5rem;
        }
        
        .card-text {
            color: #6c757d;
        }
        
        .card-footer {
            padding-top: 0;
        }
        
        .admin-card:hover .btn-outline-primary {
            background-color: #0d6efd;
            color: white;
        }
        
        @@media (max-width: 767.98px) {
            .container {
                padding-left: 10px;
                padding-right: 10px;
            }
        }
    </style>
}

@section Scripts {
    <script>
        $(document).ready(function() {
            // Additional initialization if needed for this page
            
            // Card animation on hover effects (optional enhancement)
            $('.admin-card').hover(
                function() {
                    $(this).find('.admin-icon').addClass('text-white');
                },
                function() {
                    $(this).find('.admin-icon').removeClass('text-white');
                }
            );
        });
    </script>
}