@{
    ViewData["Title"] = "Заемане / Връщане";
}

<div class="container mt-5">
    <h2 class="text-center fw-bold mb-4">📖 Изберете операция</h2>

    <div class="row g-4 justify-content-center">
        <!-- Borrow Unit -->
        <div class="col-12 col-md-5">
            <a asp-controller="Movement" asp-action="RegisterGiving" class="admin-card">
                <div class="card text-center shadow-sm h-100">
                    <div class="card-body d-flex flex-column align-items-center justify-content-center">
                        <i class="fas fa-arrow-circle-right admin-icon"></i>
                        <h5 class="card-title">Заемане на библиотечна единица</h5>
                        <p class="card-text">Регистрирай заемането на книга от потребител.</p>
                    </div>
                </div>
            </a>
        </div>

        <!-- Return Unit -->
        <div class="col-12 col-md-5">
            <a asp-controller="Movement" asp-action="RegisterReturning" class="admin-card">
                <div class="card text-center shadow-sm h-100">
                    <div class="card-body d-flex flex-column align-items-center justify-content-center">
                        <i class="fas fa-arrow-circle-left admin-icon"></i>
                        <h5 class="card-title">Връщане на библиотечна единица</h5>
                        <p class="card-text">Регистрирай връщането на книга в библиотеката.</p>
                    </div>
                </div>
            </a>
        </div>
    </div>
</div>

<style>
    .admin-card {
        text-decoration: none;
        color: inherit;
        transition: transform 0.2s, box-shadow 0.2s;
    }

        .admin-card:hover {
            transform: scale(1.05);
            box-shadow: 0 5px 15px rgba(0, 0, 0, 0.2);
        }

    .card {
        border: none;
        border-radius: 10px;
        display: flex;
        flex-direction: column;
        justify-content: space-between;
    }

    .admin-icon {
        font-size: 3rem;
        color: #28a745;
        margin-bottom: 15px;
    }

    h5 {
        font-weight: bold;
        font-size: 1.25rem;
        margin-bottom: 10px;
    }

    p.card-text {
        font-size: 1rem;
        color: #6c757d;
    }

    .card-body {
        padding: 20px;
    }

    .row {
        margin-left: -15px;
        margin-right: -15px;
    }

    .col-12 {
        padding-left: 15px;
        padding-right: 15px;
    }

    .container {
        padding-left: 15px;
        padding-right: 15px;
    }
</style>
