@{
    ViewData["Title"] = "Заемане / Връщане";
}

<div class="container mt-5">
    <div class="row">
        <div class="col-12">
            <h2 class="text-center fw-bold mb-4">Изберете операция</h2>
        </div>
    </div>
    <div class="row g-4 justify-content-center">
        <!-- Borrow Unit -->
        <div class="col-12 col-md-6 col-lg-5">
            <a asp-controller="Movement" asp-action="RegisterGiving" class="admin-card">
                <div class="card text-center shadow h-100">
                    <div class="card-body d-flex flex-column align-items-center justify-content-center py-4">
                        <div class="icon-wrapper mb-3 bg-light-blue">
                            <!-- SVG icon that works without external dependencies -->
                            <svg class="admin-icon" viewBox="0 0 24 24" width="64" height="64">
                                <path fill="currentColor" d="M12 4l-1.41 1.41L16.17 11H4v2h12.17l-5.58 5.59L12 20l8-8z" />
                            </svg>
                        </div>
                        <h5 class="card-title">Заемане на библиотечна единица</h5>
                        <p class="card-text">Регистрирай заемането на книга от потребител.</p>
                        <div class="mt-3">
                            <span class="btn btn-primary px-4 py-2 rounded-pill">
                                Заеми
                            </span>
                        </div>
                    </div>
                </div>
            </a>
        </div>
        <!-- Return Unit -->
        <div class="col-12 col-md-6 col-lg-5">
            <a asp-controller="Movement" asp-action="RegisterReturning" class="admin-card">
                <div class="card text-center shadow h-100">
                    <div class="card-body d-flex flex-column align-items-center justify-content-center py-4">
                        <div class="icon-wrapper mb-3 bg-light-green">
                            <!-- SVG icon that works without external dependencies -->
                            <svg class="admin-icon" viewBox="0 0 24 24" width="64" height="64">
                                <path fill="currentColor" d="M20 11H7.83l5.59-5.59L12 4l-8 8 8 8 1.41-1.41L7.83 13H20v-2z" />
                            </svg>
                        </div>
                        <h5 class="card-title">Връщане на библиотечна единица</h5>
                        <p class="card-text">Регистрирай връщането на книга в библиотеката.</p>
                        <div class="mt-3">
                            <span class="btn btn-success px-4 py-2 rounded-pill">
                                Върни
                            </span>
                        </div>
                    </div>
                </div>
            </a>
        </div>
    </div>

    <!-- Back Button - Positioned below cards -->
    <div class="row mt-5 mb-4 justify-content-center">
        <div class="col-12 col-md-6 col-lg-4 text-center">
            <a href="@Url.Action("Dashboard", "Librarian")" class="back-button-card">
                <div class="card shadow">
                    <div class="card-body py-3 px-4">
                        <div class="d-flex align-items-center justify-content-center">
                            <div class="back-icon-wrapper me-3">
                                <svg class="back-icon" viewBox="0 0 24 24" width="28" height="28">
                                    <path fill="currentColor" d="M20 11H7.83l5.59-5.59L12 4l-8 8 8 8 1.41-1.41L7.83 13H20v-2z" />
                                </svg>
                            </div>
                            <span class="back-text">Назад</span>
                        </div>
                    </div>
                </div>
            </a>
        </div>
    </div>
</div>

<style>
    /* Back Button Styles - Updated for framed card style */
    .back-button-card {
        display: block;
        text-decoration: none;
        color: #6c757d;
        font-weight: 500;
        transition: all 0.3s ease-in-out;
    }

        .back-button-card:hover {
            transform: translateY(-3px);
            color: #0d6efd;
        }

            .back-button-card:hover .card {
                box-shadow: 0 10px 20px rgba(0, 0, 0, 0.15) !important;
            }

    .back-icon-wrapper {
        display: flex;
        align-items: center;
        justify-content: center;
    }

    .back-text {
        font-size: 1.2rem;
        font-weight: 600;
    }

    /* Original Card Styles */
    .admin-card {
        text-decoration: none;
        color: inherit;
        display: block;
        transition: all 0.3s ease-in-out;
        cursor: pointer;
    }

        .admin-card:hover {
            transform: translateY(-5px);
            color: inherit; /* Ensures text color doesn't change on hover */
        }

            .admin-card:hover .card {
                box-shadow: 0 10px 20px rgba(0, 0, 0, 0.15) !important;
            }

    /* Make the entire card clickable */
    .card {
        border: none;
        border-radius: 15px;
        overflow: hidden;
        transition: all 0.3s ease;
        position: relative;
    }

    .icon-wrapper {
        width: 90px;
        height: 90px;
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
    }

    .bg-light-blue {
        background-color: rgba(13, 110, 253, 0.1);
    }

    .bg-light-green {
        background-color: rgba(25, 135, 84, 0.1);
    }

    .admin-icon {
        color: #0d6efd;
    }

    .icon-wrapper:nth-child(1) .admin-icon {
        color: #0d6efd;
    }

    .icon-wrapper:nth-child(2) .admin-icon {
        color: #198754;
    }

    h5.card-title {
        font-weight: 600;
        font-size: 1.25rem;
        margin-bottom: 0.75rem;
        color: #333;
    }

    p.card-text {
        font-size: 0.95rem;
        color: #6c757d;
    }

    /* Make buttons larger */
    .btn {
        font-size: 1rem;
        font-weight: 500;
        transition: all 0.2s ease;
    }

        .btn:hover {
            transform: scale(1.05);
        }

    /* Media Queries for Responsive Design */
    @@media (max-width: 767.98px) {
        .container {
            padding-left: 20px;
            padding-right: 20px;
        }

        .icon-wrapper {
            width: 80px;
            height: 80px;
        }

        .admin-icon {
            width: 56px;
            height: 56px;
        }

        .back-text {
            font-size: 1.1rem;
        }
    }

    @@media (max-width: 575.98px) {
        h2 {
            font-size: 1.5rem;
        }

        h5.card-title {
            font-size: 1.1rem;
        }

        p.card-text {
            font-size: 0.9rem;
        }

        .btn {
            font-size: 0.9rem;
            padding: 0.375rem 1rem !important;
        }

        .back-text {
            font-size: 1rem;
        }
    }
</style>