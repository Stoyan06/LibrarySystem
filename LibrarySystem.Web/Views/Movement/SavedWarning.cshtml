
@model MovementWarningViewModel
@{
    ViewData["Title"] = "Предупреждение";
}
<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-12 col-md-8 col-lg-6">
            <div class="card border-warning shadow">
                <div class="card-header bg-warning text-dark">
                    <h1 class="text-center mb-0 fs-4">
                        <i class="bi bi-exclamation-triangle-fill me-2"></i>
                        Предупреждение!
                    </h1>
                </div>
                <div class="card-body p-4 text-center">
                    <div class="mb-4">
                        <div class="alert-icon mb-3">
                            <i class="bi bi-shield-exclamation text-warning" style="font-size: 3rem;"></i>
                        </div>
                        <div class="alert alert-warning py-3">
                            <p class="fw-bold mb-0">
                                Тази библиотечна единица в момента е запазена от друг потребител:
                            </p>
                            <p class="mb-2 mt-3 fs-5">
                                <span class="badge bg-light text-dark p-2 border">@Model.ReaderName</span>
                            </p>
                        </div>
                    </div>
                    <div class="mt-4 d-flex justify-content-center flex-wrap gap-2">
                        <a asp-action="Register" class="btn btn-secondary">
                            <i class="bi bi-x-circle me-2"></i>
                            Отказ
                        </a>
                        <form asp-action="RegisterGivingConfirmed" asp-controller="Movement" method="post" class="d-inline">
                            <input type="hidden" asp-for="LibraryUnitId" />
                            <input type="hidden" asp-for="ReaderId" />
                            <input type="hidden" asp-for="DeadLine" />
                            <input type="hidden" asp-for="ReaderName" />
                            <button type="submit" class="btn btn-danger">
                                <i class="bi bi-exclamation-circle me-2"></i>
                                Продължи въпреки това
                            </button>
                        </form>


                    </div>
                </div>
               
            </div>
        </div>
    </div>
</div>
@section Styles {
    <!-- Bootstrap Icons -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">
    <style>
        /* Animation for alert icon */
        .alert-icon {
            animation: pulse 2s infinite;
        }

        @@keyframes pulse {
            0% {
                transform: scale(1);
            }

            50% {
                transform: scale(1.1);
            }

            100% {
                transform: scale(1);
            }
        }
        /* Card styling */
        .card {
            border-radius: 12px;
            overflow: hidden;
            border-width: 2px;
        }
        /* Button styling for better responsiveness */
        @@media (max-width: 575.98px) {
            .btn {
                width: 100%;
                margin-bottom: 0.5rem;
            }
        }
    </style>
}