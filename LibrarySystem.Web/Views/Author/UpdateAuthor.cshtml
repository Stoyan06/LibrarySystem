@using LibrarySystem.Models
@model Author
@{
    ViewData["Title"] = "Редактиране на автор";
}

<div class="container py-4">
    <h1 class="mb-4 text-center">Редактиране на автор</h1>

    <!-- Form for Editing Author -->
    <div class="row justify-content-center">
        <div class="col-12 col-md-10 col-lg-8">
            <form method="post" class="p-4 border rounded shadow bg-light">
                <!-- Name Field -->
                <div class="mb-4">
                    <label for="nameInput" class="form-label fw-bold">Име</label>
                    <div class="input-group">
                        <span class="input-group-text"><i class="bi bi-person-fill"></i></span>
                        <input type="text" id="nameInput" asp-for="FullName" class="form-control"
                               placeholder="Въведи пълното име на автор" required>
                    </div>
                    <span asp-validation-for="FullName" class="text-danger"></span>
                </div>

                <!-- Action Buttons -->
                <div class="d-flex flex-column flex-sm-row justify-content-between gap-3 mt-4">
                    <!-- Cancel Button -->
                    <a asp-action="AllAuthors" class="btn btn-secondary btn-lg d-flex align-items-center justify-content-center gap-2">
                        <i class="bi bi-x-circle"></i>
                        <span>Откажи</span>
                    </a>

                    <!-- Submit Button -->
                    <button type="submit" class="btn btn-primary btn-lg d-flex align-items-center justify-content-center gap-2">
                        <i class="bi bi-check-circle"></i>
                        <span>Редактирай автор</span>
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

<!-- Client-side validation -->
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}