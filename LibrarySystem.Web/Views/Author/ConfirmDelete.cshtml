@using LibrarySystem.Models
@model Author

@{
    ViewData["Title"] = "Потвърждение за изтриване на автор";
}

<head>
    <title>@ViewData["Title"] - Библиотечна система</title>
</head>

<h1 class="mb-4 text-center text-danger">Потвърждение за изтриване на автор</h1>

<div class="w-50 mx-auto p-4 border rounded shadow-sm bg-light">
    <p class="text-center fw-bold">
        Сигурни ли сте, че искате да изтриете автор: <span class="text-danger">"@Model.FullName"</span>?
    </p>

    <form method="post" class="d-flex justify-content-between">
        <!-- Confirm Delete Button -->
        <button type="submit" class="btn btn-danger btn-lg px-4">Изтрий</button>

        <!-- Cancel Button -->
        <a asp-action="AllAuthors" class="btn btn-secondary btn-lg px-4">Откажи</a>
    </form>
</div>
