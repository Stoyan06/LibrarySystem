@using LibrarySystem.Models
@model Author
@{
    ViewData["Title"] = "Потвърждение за изтриване на автор";
}

<!-- Make sure Font Awesome is properly loaded -->
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">

<div class="container mt-4 mb-5">
    <div class="row justify-content-center">
        <div class="col-lg-8 col-md-10 col-sm-12">
            <div class="card border-0 shadow-lg rounded-4">
                <div class="card-header bg-danger text-white py-3 rounded-top-4">
                    <h2 class="mb-0 text-center">
                        <i class="fas fa-exclamation-triangle me-2"></i>Потвърждение за изтриване
                    </h2>
                </div>

                <div class="card-body p-4 p-lg-5">
                    <div class="text-center mb-4">
                        <div class="warning-circle mx-auto">
                            <i class="fas fa-trash-alt fa-3x text-danger"></i>
                        </div>
                    </div>

                    <div class="alert alert-danger border-danger mb-4">
                        <p class="mb-0 text-center fs-5">
                            <i class="fas fa-info-circle me-2"></i>Това действие <strong>не може</strong> да бъде отменено!
                        </p>
                    </div>

                    <div class="text-center mb-4">
                        <p class="fs-5">
                            Сигурни ли сте, че искате да изтриете автора:
                        </p>
                        <h3 class="text-danger fw-bold mb-4">
                            "<i class="fas fa-user me-2"></i>@Model.FullName"
                        </h3>
                    </div>

                    <form method="post">
                        <div class="d-flex flex-column flex-sm-row justify-content-center gap-3 mt-4">
                            <a asp-action="AllAuthors" class="btn btn-outline-secondary btn-lg px-4 transition-btn">
                                <i class="fas fa-times me-2"></i>Откажи
                            </a>
                            <button type="submit" class="btn btn-danger btn-lg px-4 transition-btn">
                                <i class="fas fa-trash-alt me-2"></i>Изтрий
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .warning-circle {
        width: 100px;
        height: 100px;
        background-color: #fff5f5;
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        margin-bottom: 20px;
        border: 2px solid #dc3545;
    }

    .transition-btn {
        transition: all 0.3s ease;
    }

    .transition-btn:hover {
        transform: translateY(-3px);
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    }

    .alert-danger {
        background-color: rgba(220, 53, 69, 0.1);
    }

    @@media (max-width: 767.98px) {
        .warning-circle {
            width: 80px;
            height: 80px;
        }
    }
</style>