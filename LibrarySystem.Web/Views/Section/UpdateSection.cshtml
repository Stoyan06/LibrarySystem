@using LibrarySystem.Models
@model Section

@{
    ViewData["Title"] = "Редактиране на раздел";
}

<head>
    <title>@ViewData["Title"] - Библиотечна система</title>
</head>

<div class="container mt-5">
    <h1 class="mb-4 text-center">Редактиране на раздел</h1>

    <form method="post" class="w-50 mx-auto p-4 border rounded shadow-sm bg-light">
        <!-- Name Field -->
        <div class="mb-3">
            <label for="nameInput" class="form-label fw-bold">Име</label>
            <input type="text" id="nameInput" asp-for="Name" class="form-control" placeholder="Въведи име на раздел">
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>

        <!-- Description Field -->
        <div class="mb-3">
            <label for="descriptionInput" class="form-label fw-bold">Описание</label>
            <input type="text" id="descriptionInput" asp-for="Description" class="form-control" placeholder="Въведи описание">
        </div>

        <!-- Submit and Cancel Buttons -->
        <div class="d-flex justify-content-between mt-4">
            <!-- Go Back Button -->
            <a asp-action="AllSections" class="btn btn-secondary btn-lg px-4">Откажи</a>
            <!-- Submit Button -->
            <input type="submit" value="Редактирай раздел" class="btn btn-primary btn-lg px-4">
        </div>
    </form>
</div>

<style>
    /* Responsive Design */
    .container {
        max-width: 600px;
    }

    /* Button adjustments for mobile */
    @@media (max-width: 768px) {
        .w-50 {
            width: 100%;
        }
        .d-flex {
            flex-direction: column;
        }
        .btn {
            width: 100%;
            margin-bottom: 10px;
        }
    }
</style>
