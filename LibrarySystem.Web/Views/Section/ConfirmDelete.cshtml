@using LibrarySystem.Models
@model Section

@{
    ViewData["Title"] = "Потвърждение за изтриване на раздел";
}

<head>
    <title>@ViewData["Title"] - Библиотечна система</title>
</head>

<h1 class="mb-4 text-center text-danger">Потвърждение за изтриване на раздел</h1>

<div class="w-50 mx-auto p-4 border rounded shadow-sm bg-light">
    <p class="text-center fw-bold">
        Сигурни ли сте, че искате да изтриете раздел: <span class="text-danger">"@Model.Name"</span>?
    </p>

    <!-- Section Description if available -->
    @if (!string.IsNullOrEmpty(Model.Description))
    {
        <p class="text-center text-muted">Описание: @Model.Description</p>
    }

    <form method="post" class="d-flex justify-content-between">
        <!-- Confirm Delete Button -->
        <button type="submit" class="btn btn-danger btn-lg px-4">Изтрий</button>

        <!-- Cancel Button -->
        <a asp-action="AllSections" class="btn btn-secondary btn-lg px-4">Откажи</a>
    </form>
</div>
