@using LibrarySystem.Models
@model Section
@{
    ViewData["Title"] = "Потвърждение за изтриване на раздел";
}
<div class="container py-4">
    <div class="row justify-content-center">
        <div class="col-12 col-md-10 col-lg-8">
            <div class="card border-danger shadow">
                <div class="card-header bg-danger text-white">
                    <h1 class="text-center mb-0 fs-4">
                        <i class="bi bi-exclamation-triangle-fill me-2"></i>
                        Потвърждение за изтриване на раздел
                    </h1>
                </div>
                <div class="card-body p-4">
                    <div class="text-center mb-4">
                        <p class="fs-5">
                            Сигурни ли сте, че искате да изтриете раздел:
                        </p>
                        <p class="fs-4 fw-bold text-danger mb-4">
                            "@Model.Name"
                        </p>
                        @if (!string.IsNullOrEmpty(Model.Description))
                        {
                            <div class="alert alert-warning mb-4">
                                <small class="d-block mb-2 fw-bold">Описание на раздела:</small>
                                <p class="mb-0 fst-italic">@Model.Description</p>
                            </div>
                        }
                    </div>
                    <form method="post">
                        <input type="hidden" asp-for="Id" />
                        <div class="d-flex flex-column flex-sm-row justify-content-center gap-3">
                            <a asp-action="AllSections" class="btn btn-outline-secondary btn-lg order-sm-1">
                                <i class="bi bi-arrow-left me-2"></i>
                                Откажи
                            </a>
                            <button type="submit" class="btn btn-danger btn-lg order-sm-2">
                                <i class="bi bi-trash-fill me-2"></i>
                                Изтрий
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
@section Styles {
    <!-- Bootstrap Icons -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">
    <style>
        /* Animation for danger alert */
        .alert-danger {
            animation: pulse 2s infinite;
        }

        @@keyframes pulse {
            0% {
                opacity: 1;
            }

            50% {
                opacity: 0.8;
            }

            100% {
                opacity: 1;
            }
        }
        /* Responsive button adjustments */
        @@media (max-width: 575.98px) {
            .btn-lg {
                width: 100%;
                margin-bottom: 0.5rem;
            }
        }
    </style>
}