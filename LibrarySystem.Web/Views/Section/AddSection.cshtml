@using LibrarySystem.Models
@model Section
@{
    ViewData["Title"] = "Добавяне на раздел";
}

<div class="container mt-5">
    <div class="card shadow">
        <div class="card-header bg-primary text-white">
            <h2 class="text-center mb-0"><i class="fas fa-folder-plus me-2"></i>Добавяне на раздел</h2>
        </div>
        <div class="card-body p-4">
            <form method="post">
                <!-- Name Field -->
                <div class="mb-4">
                    <label for="nameInput" class="form-label">Име</label>
                    <div class="input-group">
                        <span class="input-group-text"><i class="fas fa-tag"></i></span>
                        <input type="text" id="nameInput" asp-for="Name" class="form-control" placeholder="Въведи име на раздел" required>
                    </div>
                    <span asp-validation-for="Name" class="text-danger small"></span>
                </div>
                
                <!-- Description Field -->
                <div class="mb-4">
                    <label for="descriptionInput" class="form-label">Описание</label>
                    <div class="input-group">
                        <span class="input-group-text"><i class="fas fa-align-left"></i></span>
                        <textarea id="descriptionInput" asp-for="Description" class="form-control" placeholder="Въведи описание" rows="3"></textarea>
                    </div>
                    <span asp-validation-for="Description" class="text-danger small"></span>
                </div>
                
                <!-- Submit and Cancel Buttons -->
                <div class="d-flex flex-wrap justify-content-between mt-4">
                    <a asp-action="AllSections" class="btn btn-outline-secondary">
                        <i class="fas fa-arrow-left me-2"></i>Назад
                    </a>
                    <button type="submit" class="btn btn-success">
                        <i class="fas fa-save me-2"></i>Добави раздел
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

<style>
    .card {
        border-radius: 0.5rem;
        border: none;
    }
    
    .card-header {
        border-radius: 0.5rem 0.5rem 0 0 !important;
    }
    
    .form-label {
        font-weight: 600;
    }
    
    .btn {
        font-weight: 500;
        padding: 0.6rem 1.5rem;
        border-radius: 0.25rem;
        transition: all 0.3s;
    }
    
    .btn-outline-secondary:hover {
        background-color: #6c757d;
        color: white;
    }
    
    .input-group-text {
        background-color: #f8f9fa;
    }
    
    /* Responsive design */
    @@media (max-width: 768px) {
        .container {
            width: 100%;
            padding: 0 10px;
        }
        
        .btn {
            padding: 0.5rem 1rem;
        }
        
        .d-flex {
            gap: 10px;
        }
        
        /* Stack buttons vertically on very small screens */
        @@media (max-width: 576px) {
            .d-flex {
                flex-direction: column-reverse;
                width: 100%;
            }
            
            .btn {
                width: 100%;
                margin-bottom: 10px;
            }
        }
    }
</style>

<!-- Add Font Awesome for icons (place in _Layout.cshtml or in this page) -->
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">

<!-- Add validation scripts if not already in _Layout.cshtml -->
<script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
<script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>