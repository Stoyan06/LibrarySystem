@model EditUserViewModel

<head>
    <title>Редактиране на информацията за потребителя - Библиотечна система</title>
    <!-- Include Bootstrap CSS for styling -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
</head>

<div class="container mt-5">
    <h2 class="text-center fw-bold mb-4">Редактиране на информацията за потребителя</h2>

    <form asp-action="EditUser" method="post" class="w-50 mx-auto p-4 border rounded shadow-sm bg-light">
        <!-- Email Field -->
        <div class="mb-3">
            <label for="emailInput" class="form-label fw-bold">Имейл:</label>
            <input type="email" id="emailInput" asp-for="Email" class="form-control" placeholder="Въведи имейл" />
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>

        <!-- First Name Field -->
        <div class="mb-3">
            <label for="firstNameInput" class="form-label fw-bold">Име:</label>
            <input type="text" id="firstNameInput" asp-for="FirstName" class="form-control" placeholder="Въведи име" required />
            <span asp-validation-for="FirstName" class="text-danger"></span>
        </div>

        <!-- Middle Name Field -->
        <div class="mb-3">
            <label for="middleNameInput" class="form-label fw-bold">Презиме:</label>
            <input type="text" id="middleNameInput" asp-for="MiddleName" class="form-control" placeholder="Въведи презиме" />
            <span asp-validation-for="MiddleName" class="text-danger"></span>
        </div>

        <!-- Last Name Field -->
        <div class="mb-3">
            <label for="lastNameInput" class="form-label fw-bold">Фамилия:</label>
            <input type="text" id="lastNameInput" asp-for="LastName" class="form-control" placeholder="Въведи фамилия" required />
            <span asp-validation-for="LastName" class="text-danger"></span>
        </div>

        <!-- Buttons -->
        <div class="d-flex justify-content-between mt-4">
            <a href="@Url.Action("UserInfo", "User")" class="btn btn-secondary btn-lg px-4">Назад</a>
            <button type="submit" class="btn btn-success btn-lg px-4">Запази промените</button>
        </div>
    </form>
</div>

<!-- Include Bootstrap JS for interactivity -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
