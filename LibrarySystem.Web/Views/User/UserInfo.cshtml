@model UserViewModel

@{
    ViewData["Title"] = "Вашата информация";
}

<head>
    <title>@ViewData["Title"] - Библиотечна система</title>
    <!-- Include Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
</head>

<div class="container mt-5">
    <h2 class="text-center fw-bold mb-4">Вашата информация</h2>

    <!-- User Information Table -->
    <div class="table-responsive w-50 mx-auto">
        <table class="table table-bordered table-hover shadow-sm rounded">
            <tbody>
                <tr>
                    <td class="fw-bold">Потребителско име:</td>
                    <td>@Model.Username</td>
                </tr>
                <tr>
                    <td class="fw-bold">Имейл:</td>
                    <td>@Model.Email</td>
                </tr>
                <tr>
                    <td class="fw-bold">Име:</td>
                    <td>@Model.FirstName</td>
                </tr>
                <tr>
                    <td class="fw-bold">Презиме:</td>
                    <td>@Model.MiddleName</td>
                </tr>
                <tr>
                    <td class="fw-bold">Фамилия:</td>
                    <td>@Model.LastName</td>
                </tr>
            </tbody>
        </table>
    </div>

    <!-- Action Buttons -->
    <div class="d-flex justify-content-center gap-2 mt-4">
        <a href="@Url.Action("EditUser", "User")" class="btn btn-primary px-4">Редактирай данните</a>
        <a asp-action="ChangeUserPassword" class="btn btn-warning px-4">Смяна на паролата</a>
        <a asp-action="Dashboard" class="btn btn-secondary px-4">Назад</a>
    </div>
</div>

<!-- Include Bootstrap JS -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
