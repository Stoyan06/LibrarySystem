@{
    ViewData["Title"] = "Потребителски Панел";
}

<div class="container py-4">
    <div class="row justify-content-center mb-4">
        <div class="col-lg-8 text-center">
            <h2 class="fw-bold user-panel-title">
                <i class="bi bi-grid-3x3-gap me-2"></i>Потребителски Панел
            </h2>
        </div>
    </div>
    
    <div class="row justify-content-center g-4">
        <!-- User Info Card -->
        <div class="col-lg-4 col-md-6">
            <div class="user-panel-card h-100">
                <div class="card-body text-center">
                    <div class="card-icon">
                        <i class="bi bi-person-circle"></i>
                    </div>
                    <h3 class="card-title">Лична информация</h3>
                    <p class="card-text">Преглед и управление на вашите лични данни.</p>
                    <a asp-controller="User" asp-action="UserInfo" class="card-button">
                        Преглед <i class="bi bi-arrow-right"></i>
                    </a>
                </div>
            </div>
        </div>
        
        <!-- User History Card -->
        <div class="col-lg-4 col-md-6">
            <div class="user-panel-card h-100">
                <div class="card-body text-center">
                    <div class="card-icon">
                        <i class="bi bi-journal-bookmark"></i>
                    </div>
                    <h3 class="card-title">История на заеманията</h3>
                    <p class="card-text">Преглед на всички заети и върнати книги.</p>
                    <a asp-controller="User" asp-action="UserHistory" class="card-button">
                        Преглед <i class="bi bi-arrow-right"></i>
                    </a>
                </div>
            </div>
        </div>
        
        
        
        <!-- Saved Items Card -->
        <div class="col-lg-4 col-md-6">
            <div class="user-panel-card h-100">
                <div class="card-body text-center">
                    <div class="card-icon">
                        <i class="bi bi-bookmark-heart"></i>
                    </div>
                    <h3 class="card-title">Запазени материали</h3>
                    <p class="card-text">Намерете бързо запазените материали, които планирате да заемете.</p>
                    <a asp-controller="LibraryUnit" asp-action="SavedUnits" class="card-button">
                        Преглед <i class="bi bi-arrow-right"></i>
                    </a>
                </div>
            </div>
        </div>
        
       
       
    </div>
</div>

@section Styles {
    <style>
        .user-panel-title {
            color: #2c3e50;
            position: relative;
            padding-bottom: 15px;
            margin-bottom: 10px;
        }
        
        .user-panel-title:after {
            content: '';
            position: absolute;
            bottom: 0;
            left: 50%;
            transform: translateX(-50%);
            width: 80px;
            height: 3px;
            background: linear-gradient(90deg, #0d6efd, #6610f2);
            border-radius: 3px;
        }
        
        .user-panel-card {
            border-radius: 12px;
            overflow: hidden;
            transition: all 0.3s ease;
            background: white;
            border: none;
            box-shadow: 0 8px 15px rgba(0,0,0,0.07);
        }
        
        .user-panel-card:hover {
            transform: translateY(-8px);
            box-shadow: 0 12px 25px rgba(0,0,0,0.1);
        }
        
        .card-body {
            padding: 1.8rem;
        }
        
        .card-icon {
            width: 70px;
            height: 70px;
            display: flex;
            align-items: center;
            justify-content: center;
            margin: 0 auto 1.3rem;
            border-radius: 50%;
            background: linear-gradient(135deg, #e6f3ff, #cce5ff);
            color: #0d6efd;
            font-size: 1.8rem;
            transition: all 0.3s ease;
        }
        
        .user-panel-card:hover .card-icon {
            transform: scale(1.1);
            background: linear-gradient(135deg, #cce5ff, #b8daff);
        }
        
        .card-title {
            font-weight: 600;
            margin-bottom: 0.8rem;
            color: #2c3e50;
            font-size: 1.3rem;
        }
        
        .card-text {
            color: #6c757d;
            margin-bottom: 1.5rem;
            font-size: 0.95rem;
        }
        
        .card-button {
            display: inline-block;
            padding: 0.5rem 1.3rem;
            background-color: #f8f9fa;
            color: #0d6efd;
            border-radius: 30px;
            font-weight: 500;
            transition: all 0.3s ease;
            text-decoration: none;
            border: 1px solid #e9ecef;
        }
        
        .card-button:hover {
            background-color: #0d6efd;
            color: white;
            border-color: #0d6efd;
            text-decoration: none;
        }
        
        .card-button i {
            margin-left: 6px;
        }
        
        @@media (max-width: 992px) {
            .user-panel-card {
                margin-bottom: 0;
            }
        }
    </style>
}