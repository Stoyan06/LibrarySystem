@model ChangeUserPasswordViewModel

<head>
    <title>Смяна на паролата на потребител - Библиотечна система</title>
    <!-- Include Bootstrap CSS for styling -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
</head>

<hr>
<h4 class="mb-4 text-center">Смяна на паролата на потребител</h4>

<form asp-action="ChangeUserPassword" method="post" class="w-50 mx-auto p-4 border rounded shadow-sm bg-light">
    @Html.AntiForgeryToken()

    <!-- Old Password Field -->
    <div class="mb-3">
        <label for="OldPassword" class="form-label fw-bold">Стара парола:</label>
        <input type="password" asp-for="OldPassword" class="form-control" id="OldPassword" placeholder="Въведете старата парола" />
        <span asp-validation-for="OldPassword" class="text-danger"></span>
    </div>

    <!-- New Password Field -->
    <div class="mb-3">
        <label for="NewPassword" class="form-label fw-bold">Нова парола:</label>
        <input type="password" asp-for="NewPassword" class="form-control" id="NewPassword" placeholder="Въведете новата парола" />
        <span asp-validation-for="NewPassword" class="text-danger"></span>
    </div>

    <!-- Confirm New Password Field -->
    <div class="mb-3">
        <label for="ConfirmNewPassword" class="form-label fw-bold">Потвърдете новата парола:</label>
        <input type="password" asp-for="ConfirmNewPassword" class="form-control" id="ConfirmNewPassword" placeholder="Потвърдете новата парола" />
        <span asp-validation-for="ConfirmNewPassword" class="text-danger"></span>
    </div>

    <!-- Submit and Cancel Buttons -->
    <div class="d-flex justify-content-between mt-4">
        <button type="submit" class="btn btn-success btn-lg px-4">Запази промените</button>
        <a href="@Url.Action("UserInfo", "User")" class="btn btn-secondary btn-lg px-4">Назад</a>
    </div>
</form>

<!-- Include Bootstrap JS for responsiveness -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
