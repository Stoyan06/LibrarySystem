@using LibrarySystem.Utility
@model LoginViewModel
@{
    ViewData["Title"] = "Вход в системата";
}

<style>
    /* Login Page Specific Styles */
    :root {
        --primary-color: #0d6efd;
        --secondary-color: #6c757d;
        --success-color: #198754;
        --bg-light: #f8f9fa;
        --text-dark: #212529;
        --shadow-sm: 0 .125rem .25rem rgba(0, 0, 0, .075);
        --shadow-md: 0 .5rem 1rem rgba(0, 0, 0, .15);
        --shadow-lg: 0 1rem 2rem rgba(0, 0, 0, .15);
        --border-radius-lg: 15px;
        --border-radius-sm: 8px;
        --transition: all 0.3s ease;
    }

    .content {
        display: flex;
        justify-content: center;
        align-items: center;
        min-height: 100vh;
        padding: 5rem 1rem;
        background: linear-gradient(-45deg, #f1f5ff, #e6f0ff, #f0f4ff);
        background-size: 400% 400%;
        animation: gradient 15s ease infinite;
    }

    @@keyframes gradient {
        0% {
            background-position: 0% 50%;
        }
        50% {
            background-position: 100% 50%;
        }
        100% {
            background-position: 0% 50%;
        }
    }

    /* Login Form Styling */
    .login-container {
        width: 100%;
        max-width: 450px;
        padding: 0;
        perspective: 1000px;
    }

    .login-form {
        width: 100%;
        padding: 2.5rem;
        background-color: #fff;
        border-radius: var(--border-radius-lg);
        box-shadow: var(--shadow-lg);
        transition: var(--transition);
        transform-style: preserve-3d;
    }

    .login-form:hover {
        box-shadow: 0 15px 30px rgba(0, 0, 0, 0.15);
        transform: translateY(-5px);
    }

    .login-header {
        margin-bottom: 2rem;
        text-align: center;
    }

    .login-header h2 {
        color: var(--primary-color);
        font-weight: 600;
        margin-bottom: 0.5rem;
    }

    .login-header p {
        color: var(--secondary-color);
        font-size: 1rem;
    }

    .form-label {
        font-weight: 500;
        margin-bottom: 0.5rem;
        color: var(--text-dark);
    }

    .form-control {
        padding: 0.75rem 1rem;
        border-radius: var(--border-radius-sm);
        border: 1px solid #dee2e6;
        transition: var(--transition);
    }

    .form-control:focus {
        border-color: var(--primary-color);
        box-shadow: 0 0 0 0.25rem rgba(13, 110, 253, 0.25);
    }

    .input-group .form-control {
        border-right: none;
    }

    .input-group-text {
        border-radius: 0 var(--border-radius-sm) var(--border-radius-sm) 0;
        background-color: #fff;
        cursor: pointer;
        transition: var(--transition);
        border-left: none;
    }

    .input-group-text:hover {
        background-color: #f8f9fa;
    }

    .btn-toggle-password {
        padding: 0.75rem 1rem;
        background-color: #fff;
        border: 1px solid #dee2e6;
        border-left: none;
        cursor: pointer;
        transition: var(--transition);
    }

    .btn-toggle-password:hover {
        background-color: #f8f9fa;
    }

    .form-check-input:checked {
        background-color: var(--primary-color);
        border-color: var(--primary-color);
    }

    .btn-primary {
        padding: 0.75rem 1.5rem;
        border-radius: 50px;
        font-weight: 500;
        background-color: var(--primary-color);
        border: none;
        box-shadow: 0 4px 6px rgba(13, 110, 253, 0.2);
        transition: var(--transition);
    }

    .btn-primary:hover {
        background-color: #0b5ed7;
        transform: translateY(-3px);
        box-shadow: 0 6px 12px rgba(13, 110, 253, 0.3);
    }

    .text-danger {
        font-size: 0.875rem;
        margin-top: 0.25rem;
    }

    /* Additional links */
    .additional-links {
        text-align: center;
        margin-top: 1.5rem;
    }

    .additional-links a {
        color: var(--primary-color);
        text-decoration: none;
        transition: var(--transition);
    }

    .additional-links a:hover {
        text-decoration: underline;
        color: #0b5ed7;
    }

    /* Responsive Adjustments */
    @@media (max-width: 576px) {
        .login-form {
            padding: 1.5rem;
        }

        .content {
            padding: 4rem 0.5rem;
        }

        .btn-primary {
            padding: 0.6rem 1.2rem;
        }
    }
</style>

<!-- Centered Login Form -->
<div class="content">
    <div class="login-container">
        <div class="login-form">
            <div class="login-header">
                <i class="bi bi-person-circle display-4 text-primary"></i>
                <h2>Вход в системата</h2>
                <p>Добре дошли! Моля, въведете вашите данни.</p>
            </div>
            
            <form asp-action="Login" method="post">
                <div class="mb-4">
                    <label asp-for="Email" class="form-label">
                        <i class="bi bi-envelope-fill me-2"></i>Email адрес
                    </label>
                    <input asp-for="Email" class="form-control" id="emailInput" placeholder="your@email.com" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>

                <div class="mb-4">
                    <label asp-for="Password" class="form-label">
                        <i class="bi bi-lock-fill me-2"></i>Парола
                    </label>
                    <div class="input-group">
                        <input asp-for="Password" type="password" class="form-control" id="passwordInput" placeholder="••••••••" />
                        <span class="input-group-text" onclick="togglePassword()">
                            <i class="bi bi-eye" id="toggleIcon"></i>
                        </span>
                    </div>
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>

                <button type="submit" class="btn btn-primary w-100">
                    <i class="bi bi-box-arrow-in-right me-2"></i>Вход
                </button>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function togglePassword() {
            let passwordInput = document.getElementById("passwordInput");
            let toggleIcon = document.getElementById("toggleIcon");

            if (passwordInput.type === "password") {
                passwordInput.type = "text";
                toggleIcon.classList.remove("bi-eye");
                toggleIcon.classList.add("bi-eye-slash");
            } else {
                passwordInput.type = "password";
                toggleIcon.classList.remove("bi-eye-slash");
                toggleIcon.classList.add("bi-eye");
            }
        }
    </script>
}