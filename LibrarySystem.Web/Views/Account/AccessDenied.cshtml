@model Microsoft.AspNetCore.Mvc.RazorPages.PageModel
@{
    ViewData["Title"] = "Достъпът е отказан";
}

<!DOCTYPE html>
<html lang="bg">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Библиотечна система</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" />
    <style>
        body {
            background-color: #f8f9fa;
        }

        .access-denied {
            margin-top: 10%;
            padding: 40px;
            background-color: #fff;
            border-radius: 15px;
            box-shadow: 0 8px 16px rgba(0, 0, 0, 0.1);
        }

        .btn-primary {
            margin-top: 20px;
            padding: 10px 20px;
            border-radius: 30px;
        }
    </style>
</head>
<body>
    <div class="container d-flex justify-content-center align-items-center min-vh-100">
        <div class="access-denied text-center">
            <h1 class="text-danger mb-4">Достъпът е отказан</h1>
            <p class="lead">Нямате необходимите права за достъп до тази страница.</p>
            <a asp-controller="Home" asp-action="Index" class="btn btn-primary">Обратно към началната страница</a>
        </div>
    </div>
</body>
</html>