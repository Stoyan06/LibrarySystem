@model RegisterViewModel
@{
    ViewData["Title"] = "Регистрация на читател";
}

<style>
    /* Registration Page Specific Styles */
    :root {
        --primary-color: #0d6efd;
        --secondary-color: #6c757d;
        --success-color: #198754;
        --bg-light: #f8f9fa;
        --text-dark: #212529;
        --shadow-sm: 0 .125rem .25rem rgba(0, 0, 0, .075);
        --shadow-md: 0 .5rem 1rem rgba(0, 0, 0, .15);
        --shadow-lg: 0 1rem 2rem rgba(0, 0, 0, .15);
        --border-radius-lg: 15px;
        --border-radius-sm: 8px;
        --transition: all 0.3s ease;
    }

    /* Content area */
    .content {
        display: flex;
        justify-content: center;
        align-items: center;
        min-height: 100vh;
        padding: 5rem 1rem;
        background: linear-gradient(-45deg, #f1f5ff, #e6f0ff, #f0f4ff);
        background-size: 400% 400%;
        animation: gradient 15s ease infinite;
    }

    @@keyframes gradient {
        0% {
            background-position: 0% 50%;
        }
        50% {
            background-position: 100% 50%;
        }
        100% {
            background-position: 0% 50%;
        }
    }

    /* Registration Form Styling */
    .registration-container {
        width: 100%;
        max-width: 600px;
        padding: 0;
        perspective: 1000px;
        margin: 2rem 0;
    }

    .registration-form {
        width: 100%;
        padding: 2.5rem;
        background-color: #fff;
        border-radius: var(--border-radius-lg);
        box-shadow: var(--shadow-lg);
        transition: var(--transition);
        transform-style: preserve-3d;
    }

    .registration-form:hover {
        box-shadow: 0 15px 30px rgba(0, 0, 0, 0.15);
        transform: translateY(-5px);
    }

    .form-header {
        margin-bottom: 2rem;
        text-align: center;
    }

    .form-header h2 {
        color: var(--primary-color);
        font-weight: 600;
        margin-bottom: 0.5rem;
    }

    .form-header p {
        color: var(--secondary-color);
        font-size: 1rem;
    }

    .form-label {
        font-weight: 500;
        margin-bottom: 0.5rem;
        color: var(--text-dark);
        display: flex;
        align-items: center;
    }

    .form-label i {
        margin-right: 0.5rem;
        color: var(--primary-color);
    }

    .form-control {
        padding: 0.75rem 1rem;
        border-radius: var(--border-radius-sm);
        border: 1px solid #dee2e6;
        transition: var(--transition);
    }

    .form-control:focus {
        border-color: var(--primary-color);
        box-shadow: 0 0 0 0.25rem rgba(13, 110, 253, 0.25);
    }

    .password-input-group {
        position: relative;
    }

    .password-toggle {
        position: absolute;
        right: 10px;
        top: 50%;
        transform: translateY(-50%);
        background: none;
        border: none;
        color: var(--secondary-color);
        cursor: pointer;
        transition: var(--transition);
    }

    .password-toggle:hover {
        color: var(--primary-color);
    }

    .btn-primary {
        padding: 0.75rem 1.5rem;
        border-radius: 50px;
        font-weight: 500;
        background-color: var(--primary-color);
        border: none;
        box-shadow: 0 4px 6px rgba(13, 110, 253, 0.2);
        transition: var(--transition);
        margin-top: 1.5rem;
    }

    .btn-primary:hover {
        background-color: #0b5ed7;
        transform: translateY(-3px);
        box-shadow: 0 6px 12px rgba(13, 110, 253, 0.3);
    }

    .text-danger {
        font-size: 0.875rem;
        margin-top: 0.25rem;
    }

    /* Additional links */
    .additional-links {
        text-align: center;
        margin-top: 1.5rem;
    }

    .additional-links a {
        color: var(--primary-color);
        text-decoration: none;
        transition: var(--transition);
    }

    .additional-links a:hover {
        text-decoration: underline;
        color: #0b5ed7;
    }

    /* Two column form layout */
    .form-row {
        display: flex;
        flex-wrap: wrap;
        gap: 1rem;
    }

    .form-col {
        flex: 1 1 calc(50% - 0.5rem);
        min-width: 200px;
    }

    /* Responsive Adjustments */
    @@media (max-width: 768px) {
        .form-col {
            flex: 1 1 100%;
        }
    }

    @@media (max-width: 576px) {
        .registration-form {
            padding: 1.5rem;
        }

        .content {
            padding: 4rem 0.5rem;
        }

        .btn-primary {
            padding: 0.6rem 1.2rem;
        }
    }
</style>

<!-- Centered Registration Form -->
<div class="content">
    <div class="registration-container">
        <div class="registration-form">
            <div class="form-header">
                <i class="bi bi-person-plus-fill display-4 text-primary"></i>
                <h2>Регистрация на читател</h2>
            </div>
            
            <form asp-action="Register" method="post">
                <div class="form-row">
                    <div class="form-col mb-3">
                        <label asp-for="FirstName" class="form-label">
                            <i class="bi bi-person-fill"></i> Име
                        </label>
                        <input asp-for="FirstName" class="form-control" />
                        <span asp-validation-for="FirstName" class="text-danger"></span>
                    </div>
                    
                    <div class="form-col mb-3">
                        <label asp-for="MiddleName" class="form-label">
                            <i class="bi bi-person-fill"></i> Презиме
                        </label>
                        <input asp-for="MiddleName" class="form-control" />
                        <span asp-validation-for="MiddleName" class="text-danger"></span>
                    </div>
                </div>
                
                <div class="mb-3">
                    <label asp-for="LastName" class="form-label">
                        <i class="bi bi-person-fill"></i> Фамилия
                    </label>
                    <input asp-for="LastName" class="form-control" />
                    <span asp-validation-for="LastName" class="text-danger"></span>
                </div>
                
                <div class="mb-3">
                    <label asp-for="Email" class="form-label">
                        <i class="bi bi-envelope-fill"></i> Имейл
                    </label>
                    <input asp-for="Email" class="form-control" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
                
                <div class="mb-3">
                    <label asp-for="Password" class="form-label">
                        <i class="bi bi-lock-fill"></i> Парола
                    </label>
                    <div class="password-input-group">
                        <input asp-for="Password" type="password" class="form-control" id="passwordInput" />
                        <button type="button" class="password-toggle" onclick="togglePassword('passwordInput', 'toggleIcon1')">
                            <i class="bi bi-eye" id="toggleIcon1"></i>
                        </button>
                    </div>
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
                
                <div class="mb-3">
                    <label asp-for="ConfirmPassword" class="form-label">
                        <i class="bi bi-shield-lock-fill"></i> Потвърди паролата
                    </label>
                    <div class="password-input-group">
                        <input asp-for="ConfirmPassword" type="password" class="form-control" id="confirmPasswordInput"  />
                        <button type="button" class="password-toggle" onclick="togglePassword('confirmPasswordInput', 'toggleIcon2')">
                            <i class="bi bi-eye" id="toggleIcon2"></i>
                        </button>
                    </div>
                    <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                </div>
                
                <button type="submit" class="btn btn-primary w-100">
                    <i class="bi bi-person-plus me-2"></i>Регистрирай се
                </button>
                
                <div class="additional-links">
                    <p class="mt-3">Вече имате акаунт? <a asp-controller="Account" asp-action="Login">Влезте тук</a></p>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function togglePassword(inputId, iconId) {
            let passwordInput = document.getElementById(inputId);
            let toggleIcon = document.getElementById(iconId);

            if (passwordInput.type === "password") {
                passwordInput.type = "text";
                toggleIcon.classList.remove("bi-eye");
                toggleIcon.classList.add("bi-eye-slash");
            } else {
                passwordInput.type = "password";
                toggleIcon.classList.remove("bi-eye-slash");
                toggleIcon.classList.add("bi-eye");
            }
        }
    </script>
}