@page
<title>Няма връзка с интернет</title>
<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-12 col-md-8 col-lg-6">
            <div class="card border-danger shadow">
                <div class="card-header bg-danger text-white">
                    <h1 class="text-center mb-0 fs-4">
                        <i class="bi bi-wifi-off me-2"></i>
                        Няма връзка с интернет
                    </h1>
                </div>
                <div class="card-body p-4 text-center">
                    <div class="mb-4">
                        <div class="alert-icon mb-3">
                            <i class="bi bi-globe-americas text-danger" style="font-size: 3rem;"></i>
                        </div>
                        <div class="alert alert-danger py-3">
                            <p class="fw-bold mb-0">
                                За да използвате тази страница е необходима интернет връзка!
                            </p>
                            <p class="mb-0">
                                Моля, проверете мрежовата си връзка и опитайте отново.
                            </p>
                        </div>
                    </div>
                    <div class="mt-4 d-flex justify-content-center flex-wrap gap-2">
                        <a href="@Url.Action("Index", "Home")" class="btn btn-primary">
                            <i class="bi bi-house-door me-2"></i>
                            Начална страница
                        </a>

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Styles {
    <!-- Bootstrap Icons -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">
    <style>
        /* Animation for alert icon */
        .alert-icon {
            animation: pulse 2s infinite;
        }
        @@keyframes pulse {
            0% { transform: scale(1); }
            50% { transform: scale(1.1); }
            100% { transform: scale(1); }
        }
        /* Card styling */
        .card {
            border-radius: 12px;
            overflow: hidden;
            border-width: 2px;
        }
        /* Button styling for better responsiveness */
        @@media (max-width: 575.98px) {
            .btn {
                width: 100%;
                margin-bottom: 0.5rem;
            }
        }
    </style>
}