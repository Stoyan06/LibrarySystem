@{
    ViewData["Title"] = "Админ Панел";
}

<!DOCTYPE html>
<html lang="bg">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Админ Панел - Библиотечна система</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" />
    <style>
        body {
            background-color: #f5f5f5;
           
            
        }
        .admin-panel {
            max-width: 800px;
            margin: auto;
            background-color: #fff;
            padding: 30px;
            border-radius: 15px;
            box-shadow: 0 8px 16px rgba(0, 0, 0, 0.1);
            display: flex;
            flex-direction: column;
            justify-content: center;
            align-items: center;
            /* height: 100vh; */
            padding: 20px;
        }
        h2 {
            text-align: center;
            margin-bottom: 20px;
        }
        .card {
            border-radius: 15px;
            transition: transform 0.3s ease;
        }
        .card:hover {
            transform: scale(1.05);
        }
    </style>
</head>
<body>
    <div class="admin-panel">
        <h2 class="text-center fw-bold mb-4">⚙️ Админ Панел</h2>
        <div class="row g-4 justify-content-center">
            <!-- Manage Users -->
            <div class="col-md-5">
                <a asp-area="" asp-controller="Admin" asp-action="ManageUsers" class="admin-card">
                    <div class="card text-center shadow-sm">
                        <div class="card-body">
                            <i class="fas fa-users admin-icon"></i>
                            <h5 class="card-title">Управление на потребителите</h5>
                            <p class="card-text">Добавяне, редактиране и премахване на потребители.</p>
                        </div>
                    </div>
                </a>
            </div>
            <!-- Admin Information -->
            <div class="col-md-5">
                <a asp-area="" asp-controller="Admin" asp-action="AdminInfo" class="admin-card">
                    <div class="card text-center shadow-sm">
                        <div class="card-body">
                            <i class="fas fa-user-shield admin-icon"></i>
                            <h5 class="card-title">Информация за администратора</h5>
                            <p class="card-text">Преглед и управление на администраторски данни.</p>
                        </div>
                    </div>
                </a>
            </div>
        </div>
    </div>
</body>
</html>
