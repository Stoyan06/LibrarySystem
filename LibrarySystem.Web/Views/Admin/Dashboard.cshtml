@{
    ViewData["Title"] = "Админ Панел";
}

<style>
    .admin-panel {
        max-width: 1000px;
        width: 100%;
        margin: 2rem auto;
        background-color: #fff;
        border-radius: 15px;
        box-shadow: 0 8px 16px rgba(0, 0, 0, 0.1);
        padding: 2rem;
    }
    
    .admin-title {
        color: #2c3e50;
        margin-bottom: 2rem;
        text-align: center;
        font-weight: 700;
    }
    
    .admin-card {
        text-decoration: none;
        color: inherit;
        display: block;
        height: 100%;
    }
    
    .admin-card:hover {
        text-decoration: none;
        color: inherit;
    }
    
    .card {
        border-radius: 15px;
        transition: all 0.3s ease;
        height: 100%;
        border: none;
        box-shadow: 0 4px 8px rgba(0,0,0,0.05);
    }
    
    .card:hover {
        transform: translateY(-10px);
        box-shadow: 0 10px 20px rgba(0,0,0,0.1);
    }
    
    .admin-icon {
        font-size: 2.5rem;
        margin-bottom: 1rem;
        color: #3498db;
    }
    
    .card-title {
        font-weight: 600;
        margin-bottom: 0.8rem;
        color: #2c3e50;
    }
    
    .card-text {
        color: #7f8c8d;
        font-size: 0.9rem;
    }
    
    @@media (max-width: 768px) {
        .admin-panel {
            margin: 1rem;
            padding: 1.5rem;
        }
        
        .admin-icon {
            font-size: 2rem;
        }
    }
</style>

<div class="admin-panel">
    <h2 class="admin-title">
        <i class="bi bi-gear-fill me-2"></i>Админ Панел
    </h2>
    
    <div class="row g-4 justify-content-center">
        <!-- Manage Users -->
        <div class="col-md-6 mb-4">
            <a asp-area="" asp-controller="Admin" asp-action="ManageUsers" class="admin-card">
                <div class="card text-center p-4">
                    <div class="card-body">
                        <i class="bi bi-people-fill admin-icon"></i>
                        <h5 class="card-title">Управление на потребителите</h5>
                        <p class="card-text">Добавяне, редактиране и премахване на потребители.</p>
                    </div>
                    <div class="card-footer bg-transparent border-0">
                        <span class="btn btn-sm btn-outline-primary">
                            <i class="bi bi-arrow-right me-1"></i>Преглед
                        </span>
                    </div>
                </div>
            </a>
        </div>
        
        <!-- Admin Information -->
        <div class="col-md-6 mb-4">
            <a asp-area="" asp-controller="Admin" asp-action="AdminInfo" class="admin-card">
                <div class="card text-center p-4">
                    <div class="card-body">
                        <i class="bi bi-shield-lock-fill admin-icon"></i>
                        <h5 class="card-title">Информация за администратора</h5>
                        <p class="card-text">Преглед и управление на администраторски данни.</p>
                    </div>
                    <div class="card-footer bg-transparent border-0">
                        <span class="btn btn-sm btn-outline-primary">
                            <i class="bi bi-arrow-right me-1"></i>Преглед
                        </span>
                    </div>
                </div>
            </a>
        </div>
    </div>
    
    <div class="text-center mt-4">
        <a asp-area="" asp-controller="Home" asp-action="Index" class="btn btn-secondary">
            <i class="bi bi-arrow-left me-2"></i>Назад към начало
        </a>
    </div>
</div>