@model UserViewModel

<div class="card shadow-lg p-4 rounded-4 mt-4">
    <h3 class="mb-4 text-primary text-center">Детайли за библиотекар</h3>

    <dl class="row">
        <dt class="col-sm-3 col-4">Име</dt>
        <dd class="col-sm-9 col-8">@Model.FirstName</dd>

        <dt class="col-sm-3 col-4">Презиме</dt>
        <dd class="col-sm-9 col-8">@Model.MiddleName</dd>

        <dt class="col-sm-3 col-4">Фамилия</dt>
        <dd class="col-sm-9 col-8">@Model.LastName</dd>

        <dt class="col-sm-3 col-4">Имейл</dt>
        <dd class="col-sm-9 col-8">@Model.Email</dd>
    </dl>

    <div class="mt-4 text-center">
        <a asp-action="ManageLibrarians" class="btn btn-secondary">
            ⬅ Назад
        </a>
    </div>
</div>
