@{
    ViewData["Title"] = "Детайли за библиотекар";
}

<div class="container py-4">
    <div class="row justify-content-center">
        <div class="col-12 col-md-10 col-lg-8">
            <div class="card shadow">
                <div class="card-header bg-primary text-white">
                    <h1 class="text-center mb-0 fs-4">
                        <i class="bi bi-person-gear me-2"></i>
                        Детайли за библиотекар
                    </h1>
                </div>
                
                <div class="card-body p-4">
                    <div class="row detail-row align-items-center">
                        <div class="col-md-3 col-sm-4 detail-label">
                            <i class="bi bi-person detail-icon"></i>Име
                        </div>
                        <div class="col-md-9 col-sm-8 detail-value">
                            @Model.FirstName
                        </div>
                    </div>
                    
                    <div class="row detail-row align-items-center">
                        <div class="col-md-3 col-sm-4 detail-label">
                            <i class="bi bi-person detail-icon"></i>Презиме
                        </div>
                        <div class="col-md-9 col-sm-8 detail-value">
                            @Model.MiddleName
                        </div>
                    </div>
                    
                    <div class="row detail-row align-items-center">
                        <div class="col-md-3 col-sm-4 detail-label">
                            <i class="bi bi-person detail-icon"></i>Фамилия
                        </div>
                        <div class="col-md-9 col-sm-8 detail-value">
                            @Model.LastName
                        </div>
                    </div>
                    
                    <div class="row detail-row align-items-center">
                        <div class="col-md-3 col-sm-4 detail-label">
                            <i class="bi bi-envelope detail-icon"></i>Имейл
                        </div>
                        <div class="col-md-9 col-sm-8 detail-value">
                            <a href="mailto:@Model.Email">@Model.Email</a>
                        </div>
                    </div>
                </div>
                
                <div class="card-footer bg-light text-center p-3">
                    <a asp-action="ManageLibrarians" class="btn btn-primary">
                        <i class="bi bi-arrow-left me-2"></i>Назад
                    </a>
                   
                </div>
            </div>
        </div>
    </div>
</div>

@section Styles {
    <!-- Bootstrap Icons -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">
    <style>
        .detail-label {
            font-weight: 600;
            color: #495057;
        }
        
        .detail-value {
            color: #212529;
        }
        
        .detail-row {
            padding: 10px 0;
            border-bottom: 1px solid #f0f0f0;
        }
        
        .detail-row:last-child {
            border-bottom: none;
        }
        
        .detail-icon {
            color: #6c757d;
            width: 24px;
            text-align: center;
            margin-right: 10px;
        }
        
        .btn {
            min-width: 120px;
            padding: 0.5rem 1rem;
        }
        
        @@media (max-width: 576px) {
            .detail-row {
                padding: 15px 0;
            }
            
            .card-footer .btn {
                display: block;
                width: 100%;
                margin: 0.5rem 0;
            }
            
            .card-footer .ms-2 {
                margin-left: 0 !important;
            }
        }
    </style>
}