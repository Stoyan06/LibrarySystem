@using LibrarySystem.Utility
@model List<UserViewModel>

@{
    ViewData["Title"] = "Управление на библиотекари";
}

<h2 class="text-center mb-4">Управление на библиотекари</h2>

<!-- Поле за търсене -->
<form method="get" asp-action="ManageLibrarians" class="mb-4">
    <div class="d-flex flex-column flex-sm-row justify-content-between">
        <input type="text" name="SearchTerm" value="@ViewData["SearchTerm"]" placeholder="Търси по име" class="form-control mb-3 mb-sm-0" />
        <button type="submit" class="btn btn-primary mb-3 mb-sm-0 ms-sm-2">Търси</button>
    </div>
</form>

<!-- Бутон за добавяне на нов потребител -->
<div class="d-flex justify-content-between mb-4">
    <a asp-action="ManageLibrarians" class="btn btn-secondary">Нулирай</a>
    <a asp-action="CreateLibrarian" class="btn btn-success">Добави нов библиотекар</a>
</div>

@if (Model.Count == 0)
{
    <h3>Няма намерени библиотекари</h3>
}
else
{
    <!-- Таблица с потребители -->
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Име</th>
                <th>Презиме</th>
                <th>Фамилия</th>
                <th>Действия</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var user in Model)
            {
                if (user.Role != SD.AdminRole)
                {
                    <tr>
                        <td>@user.FirstName</td>
                        <td>@user.MiddleName</td>
                        <td>@user.LastName</td>
                        <td>
                            <a asp-action="LibrarianDetails" asp-route-UserId="@user.Id" class="btn btn-info btn-sm">Детайли</a>
                            <a asp-action="EditLibrarian" asp-route-UserId="@user.Id" class="btn btn-warning btn-sm">Редактирай</a>
                            <a asp-action="ConfirmDeleteLibrarian" asp-route-UserId="@user.Id" class="btn btn-danger btn-sm">Изтрий</a>
                        </td>
                    </tr>
                }
            }
        </tbody>
    </table>
}
