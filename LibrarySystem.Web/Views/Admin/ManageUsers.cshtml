@{
    ViewData["Title"] = "Управление на потребители";
}

<div class="container mt-5">
    <h2 class="text-center fw-bold mb-4">⚙️ Управление на потребители</h2>

    <div class="row g-4 justify-content-center">
        <!-- Manage Librarians -->
        <div class="col-md-5 col-sm-12">
            <a asp-controller="Admin" asp-action="ManageLibrarians" class="admin-card">
                <div class="card text-center shadow-sm">
                    <div class="card-body">
                        <i class="fas fa-users admin-icon"></i>
                        <h5 class="card-title">Управление на библиотекари</h5>
                        <p class="card-text">Добавяне, редактиране и премахване на библиотекари.</p>
                    </div>
                </div>
            </a>
        </div>

        <!-- Manage Readers -->
        <div class="col-md-5 col-sm-12">
            <a asp-controller="Admin" asp-action="ManageReaders" class="admin-card">
                <div class="card text-center shadow-sm">
                    <div class="card-body">
                        <i class="fas fa-users admin-icon"></i>
                        <h5 class="card-title">Управление на читатели</h5>
                        <p class="card-text">Добавяне, редактиране и премахване на читатели.</p>
                    </div>
                </div>
            </a>
        </div>
    </div>
</div>
