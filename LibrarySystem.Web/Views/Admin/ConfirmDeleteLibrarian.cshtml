@model LibrarianViewModel

@{
    //ViewData["Title"] = "Потвърждение за изтриване на читател";
}

<div class="card shadow-lg p-4 rounded-4 mt-4">
    <h3 class="mb-4 text-danger">Сигурни ли сте, че искате да изтриете този библиотекар?</h3>

    <dl class="row">
        <dt class="col-sm-3">Име</dt>
        <dd class="col-sm-9">@Model.FirstName</dd>

        <dt class="col-sm-3">Презиме</dt>
        <dd class="col-sm-9">@Model.MiddleName</dd>

        <dt class="col-sm-3">Фамилия</dt>
        <dd class="col-sm-9">@Model.LastName</dd>

        <dt class="col-sm-3">Имейл</dt>
        <dd class="col-sm-9">@Model.Email</dd>
    </dl>

    <div class="mt-4">
        <a asp-action="DeleteLibrarian" asp-route-UserId="@Model.Id" class="btn btn-danger">Изтрий</a>
        <a asp-action="ManageLibrarians" class="btn btn-secondary">Отказ</a>
    </div>
</div>
