@model LibrarianViewModel
@{
    ViewData["Title"] = "Изтриване на библиотекар";
}

<div class="container py-4">
    <div class="row justify-content-center">
        <div class="col-12 col-md-10 col-lg-8">
            <div class="card border-danger shadow-sm">
                <div class="card-header bg-danger text-white">
                    <h3 class="card-title mb-0 text-center">
                        <i class="bi bi-exclamation-triangle-fill me-2"></i>Изтриване на библиотекар
                    </h3>
                </div>
                <div class="card-body p-4">
                    <div class="alert alert-warning mb-4">
                        <p class="mb-0 text-center fw-bold">
                            Сигурни ли сте, че искате да изтриете този библиотекар?
                        </p>
                    </div>

                    <div class="row g-3 mb-4">
                        <div class="col-12 col-sm-6">
                            <div class="card h-100">
                                <div class="card-body">
                                    <h5 class="card-title text-muted mb-3">
                                        <i class="bi bi-person-badge me-2"></i>Лична информация
                                    </h5>
                                    <dl class="row mb-0">
                                        <dt class="col-sm-4">Име</dt>
                                        <dd class="col-sm-8">@Model.FirstName</dd>
                                        <dt class="col-sm-4">Презиме</dt>
                                        <dd class="col-sm-8">@Model.MiddleName</dd>
                                        <dt class="col-sm-4">Фамилия</dt>
                                        <dd class="col-sm-8">@Model.LastName</dd>
                                    </dl>
                                </div>
                            </div>
                        </div>
                        <div class="col-12 col-sm-6">
                            <div class="card h-100">
                                <div class="card-body">
                                    <h5 class="card-title text-muted mb-3">
                                        <i class="bi bi-envelope me-2"></i>Контактна информация
                                    </h5>
                                    <dl class="row mb-0">
                                        <dt class="col-sm-4">Имейл</dt>
                                        <dd class="col-sm-8 text-break">@Model.Email</dd>
                                    </dl>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="d-grid gap-3 d-sm-flex justify-content-sm-between">
                        <a asp-action="DeleteLibrarian" asp-route-UserId="@Model.Id" class="btn btn-danger">
                            <i class="bi bi-trash-fill me-2"></i>Изтрий
                        </a>
                        <a asp-action="ManageLibrarians" class="btn btn-secondary">
                            <i class="bi bi-x-circle me-2"></i>Отказ
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Add Bootstrap Icons -->
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">

@section Scripts {
    <script>
        // Add any necessary client-side scripts here
    </script>
}