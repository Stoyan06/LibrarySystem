@model ReaderViewModel
@{
    ViewData["Title"] = "Добавяне на читател";
}

<div class="container py-4">
    <div class="row justify-content-center">
        <div class="col-12 col-md-10 col-lg-8">
            <div class="card border-success shadow-sm">
                <div class="card-header bg-success text-white">
                    <h2 class="card-title mb-0 text-center">
                        <i class="bi bi-person-plus-fill me-2"></i>Добавяне на читател
                    </h2>
                </div>
                <div class="card-body p-4">
                    <form asp-action="CreateReader" method="post" class="needs-validation" novalidate>
                        <div class="row g-3 mb-3">
                            <div class="col-12">
                                <div class="card bg-light">
                                    <div class="card-body">
                                        <h5 class="card-title mb-3">
                                            <i class="bi bi-person-vcard me-2"></i>Лична информация
                                        </h5>
                                        <div class="row g-3">
                                            <div class="col-md-4">
                                                <label asp-for="FirstName" class="form-label">Име</label>
                                                <div class="input-group">
                                                    <span class="input-group-text"><i class="bi bi-person"></i></span>
                                                    <input asp-for="FirstName" class="form-control" required />
                                                </div>
                                                <span asp-validation-for="FirstName" class="text-danger"></span>
                                            </div>
                                            <div class="col-md-4">
                                                <label asp-for="MiddleName" class="form-label">Презиме</label>
                                                <div class="input-group">
                                                    <span class="input-group-text"><i class="bi bi-person"></i></span>
                                                    <input asp-for="MiddleName" class="form-control" required />
                                                </div>
                                                <span asp-validation-for="MiddleName" class="text-danger"></span>
                                            </div>
                                            <div class="col-md-4">
                                                <label asp-for="LastName" class="form-label">Фамилия</label>
                                                <div class="input-group">
                                                    <span class="input-group-text"><i class="bi bi-person"></i></span>
                                                    <input asp-for="LastName" class="form-control" required />
                                                </div>
                                                <span asp-validation-for="LastName" class="text-danger"></span>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <div class="col-12">
                                <div class="card bg-light">
                                    <div class="card-body">
                                        <h5 class="card-title mb-3">
                                            <i class="bi bi-shield-lock me-2"></i>Информация за акаунта
                                        </h5>
                                        <div class="row g-3">
                                            <div class="col-md-12">
                                                <label asp-for="Email" class="form-label">Имейл</label>
                                                <div class="input-group">
                                                    <span class="input-group-text"><i class="bi bi-envelope"></i></span>
                                                    <input asp-for="Email" type="email" class="form-control" required />
                                                </div>
                                                <span asp-validation-for="Email" class="text-danger"></span>
                                            </div>
                                            <div class="col-md-6">
                                                <label asp-for="Password" class="form-label">Парола</label>
                                                <div class="input-group">
                                                    <span class="input-group-text"><i class="bi bi-key"></i></span>
                                                    <input asp-for="Password" type="password" class="form-control" required />
                                                </div>
                                                <span asp-validation-for="Password" class="text-danger"></span>
                                            </div>
                                            <div class="col-md-6">
                                                <label asp-for="ConfirmPassword" class="form-label">Потвърди парола</label>
                                                <div class="input-group">
                                                    <span class="input-group-text"><i class="bi bi-key-fill"></i></span>
                                                    <input asp-for="ConfirmPassword" type="password" class="form-control" required />
                                                </div>
                                                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="d-grid gap-3 d-sm-flex justify-content-sm-between mt-4">
                            <button type="submit" class="btn btn-success">
                                <i class="bi bi-save me-2"></i>Запиши
                            </button>
                            <a asp-action="ManageReaders" class="btn btn-secondary">
                                <i class="bi bi-x-circle me-2"></i>Отказ
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Add Bootstrap Icons -->
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">

@section Scripts {
    <script>
        // Bootstrap form validation
        (function () {
            'use strict'

            // Fetch all forms we want to apply validation to
            var forms = document.querySelectorAll('.needs-validation')

            // Loop over them and prevent submission
            Array.prototype.slice.call(forms)
                .forEach(function (form) {
                    form.addEventListener('submit', function (event) {
                        if (!form.checkValidity()) {
                            event.preventDefault()
                            event.stopPropagation()
                        }

                        form.classList.add('was-validated')
                    }, false)
                })
        })()
    </script>
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}