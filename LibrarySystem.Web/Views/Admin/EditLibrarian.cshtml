@model EditLibrarianViewModel
@{
    ViewData["Title"] = "Редактиране на библиотекар";
}

<div class="container py-4">
    <div class="row justify-content-center">
        <div class="col-12 col-md-10 col-lg-8">
            <div class="card shadow">
                <div class="card-header bg-primary text-white">
                    <h1 class="text-center mb-0 fs-4">
                        <i class="bi bi-person-gear me-2"></i>
                        Редактиране на библиотекар
                    </h1>
                </div>

                <div class="card-body p-4">
                    <form asp-action="EditLibrarian" method="post">
                        <input type="hidden" asp-for="Id" />

                        <div class="row mb-3">
                            <label asp-for="FirstName" class="col-form-label col-md-3 col-sm-12">
                                <i class="bi bi-person me-2"></i>Име
                            </label>
                            <div class="col-md-9 col-sm-12">
                                <div class="position-relative">
                                    <input asp-for="FirstName" class="form-control" placeholder="Въведете име" />
                                    <span asp-validation-for="FirstName" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <div class="row mb-3">
                            <label asp-for="MiddleName" class="col-form-label col-md-3 col-sm-12">
                                <i class="bi bi-person me-2"></i>Презиме
                            </label>
                            <div class="col-md-9 col-sm-12">
                                <div class="position-relative">
                                    <input asp-for="MiddleName" class="form-control" placeholder="Въведете презиме" />
                                    <span asp-validation-for="MiddleName" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <div class="row mb-3">
                            <label asp-for="LastName" class="col-form-label col-md-3 col-sm-12">
                                <i class="bi bi-person me-2"></i>Фамилия
                            </label>
                            <div class="col-md-9 col-sm-12">
                                <div class="position-relative">
                                    <input asp-for="LastName" class="form-control" placeholder="Въведете фамилия" />
                                    <span asp-validation-for="LastName" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <div class="row mb-4">
                            <label asp-for="Email" class="col-form-label col-md-3 col-sm-12">
                                <i class="bi bi-envelope me-2"></i>Имейл
                            </label>
                            <div class="col-md-9 col-sm-12">
                                <div class="position-relative">
                                    <input asp-for="Email" class="form-control" placeholder="Въведете имейл адрес" />
                                    <span asp-validation-for="Email" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <hr />

                        <div class="d-flex justify-content-between action-buttons mt-4">
                            <button type="submit" class="btn btn-success btn-action">
                                <i class="bi bi-save me-2"></i>Запази
                            </button>
                            <a asp-action="ChangeLibrarianPassword" asp-route-UserId="@Model.Id" class="btn btn-warning btn-action">
                                <i class="bi bi-key me-2"></i>Смяна на парола
                            </a>
                            <a asp-action="ManageLibrarians" class="btn btn-secondary btn-action">
                                <i class="bi bi-arrow-left me-2"></i>Отказ
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

@section Styles {
    <!-- Bootstrap Icons -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">
    <style>
        .input-group-icon {
            position: absolute;
            top: 50%;
            left: 12px;
            transform: translateY(-50%);
            color: #6c757d;
            z-index: 4;
        }

        .input-with-icon {
            padding-left: 35px;
        }

        .btn-action {
            min-width: 120px;
        }

        @@media (max-width: 576px) {
            .action-buttons {
                flex-direction: column;
                gap: 10px;
            }

            .btn-action {
                width: 100%;
                margin-bottom: 0.5rem;
            }
        }
    </style>
}