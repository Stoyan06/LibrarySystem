@model EditReaderViewModel
@{
    ViewData["Title"] = "Редактиране на читател";
}

<div class="container py-4">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-sm border-0 rounded-3">
                <div class="card-header bg-white border-0 pt-4">
                    <h2 class="text-center text-primary">
                        <i class="bi bi-pencil-square me-2"></i>Редактиране на читател
                    </h2>
                </div>

                <div class="card-body p-4">
                    <form asp-action="EditReader" method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
                        <input type="hidden" asp-for="Id" />

                        <div class="row mb-3">
                            <label for="FirstName" class="col-form-label col-sm-3">
                                <i class="bi bi-person me-2 text-muted"></i>Име:
                            </label>
                            <div class="col-sm-9">
                                <input type="text" asp-for="FirstName" class="form-control" required />
                                <span asp-validation-for="FirstName" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="row mb-3">
                            <label for="MiddleName" class="col-form-label col-sm-3">
                                <i class="bi bi-person me-2 text-muted"></i>Презиме:
                            </label>
                            <div class="col-sm-9">
                                <input type="text" asp-for="MiddleName" class="form-control" />
                                <span asp-validation-for="MiddleName" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="row mb-3">
                            <label for="LastName" class="col-form-label col-sm-3">
                                <i class="bi bi-person me-2 text-muted"></i>Фамилия:
                            </label>
                            <div class="col-sm-9">
                                <input type="text" asp-for="LastName" class="form-control" required />
                                <span asp-validation-for="LastName" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="row mb-4">
                            <label for="Email" class="col-form-label col-sm-3">
                                <i class="bi bi-envelope me-2 text-muted"></i>Имейл:
                            </label>
                            <div class="col-sm-9">
                                <input type="email" asp-for="Email" class="form-control" required />
                                <span asp-validation-for="Email" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="d-flex justify-content-between mt-4">
                            <a asp-action="ManageReaders" class="btn btn-outline-secondary">
                                <i class="bi bi-arrow-left me-2"></i>Назад
                            </a>
                            <div>
                                <a asp-action="ChangeReaderPassword" asp-route-UserId="@Model.Id" class="btn btn-outline-warning me-2">
                                    <i class="bi bi-key me-2"></i>Смяна на парола
                                </a>
                                <button type="submit" class="btn btn-success">
                                    <i class="bi bi-check2 me-2"></i>Запази промените
                                </button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        $(document).ready(function () {
            // Add floating label effect
            $('.form-control').on('focus blur', function (e) {
                $(this).parents('.form-control').toggleClass('focused', (e.type === 'focus' || this.value.length > 0));
            }).trigger('blur');

            // Form validation visual feedback
            $('form').on('submit', function () {
                if (!this.checkValidity()) {
                    event.preventDefault();
                    event.stopPropagation();
                }
                $(this).addClass('was-validated');
            });
        });
    </script>
}

@section Styles {
    <!-- Bootstrap Icons -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">
}