@using LibrarySystem.Models
@model TitleViewModel

@{
    ViewData["Title"] = "Добавяне на заглавие";
}

<head>
    <title>@ViewData["Title"] - Библиотечна система</title>
    <!-- Include Bootstrap CSS for better styling -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
    <!-- Include Select2 CSS for enhanced select dropdown -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/select2/4.1.0-beta.1/css/select2.min.css" rel="stylesheet" />
</head>

<h1 class="mb-4 text-center">Добавяне на заглавие</h1>

<form method="post" class="w-75 mx-auto p-4 border rounded shadow-sm bg-light">
    <!-- Name Field -->
    <div class="mb-3">
        <label for="nameInput" class="form-label fw-bold">Име</label>
        <input type="text" id="nameInput" asp-for="Name" class="form-control" placeholder="Въведи име на заглавие">
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <!-- Description Field -->
    <div class="mb-3">
        <label for="descriptionInput" class="form-label fw-bold">Описание(Анотация)</label>
        <input type="text" id="descriptionInput" asp-for="Description" class="form-control" placeholder="Въведи описание">
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>

    <!-- Section Dropdown -->
    <div class="mb-3">
        <label for="SectionId" class="form-label fw-bold">Раздел</label>
        <select asp-for="SectionId" class="form-control" asp-items="Model.Sections">
            <option value="">Избери раздел</option>
        </select>
    </div>

    <!-- Authors Dropdown (Multiple Selection) -->
    <div class="mb-3">
        <label for="AuthorId" class="form-label fw-bold">Автор(и)</label>
        <select asp-for="SelectedAuthors" class="form-select select2" asp-items="Model.Authors" multiple>
            <!-- Authors will be populated dynamically -->
        </select>
    </div>

    <!-- Include jQuery & Select2 JS -->
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/select2/4.1.0-beta.1/js/select2.min.js"></script>

    <script>
        $(document).ready(function () {
            // Initialize Select2 for multiple authors
            $('.select2').select2({
                placeholder: "Избери автор(и)",
                allowClear: true,
                width: '100%'
            });
        });
    </script>

    <!-- Submit and Cancel Buttons -->
    <div class="d-flex justify-content-between mt-4">
        <!-- Cancel Button -->
        <a asp-action="AllTitles" class="btn btn-secondary btn-lg px-4">Откажи</a>
        <!-- Submit Button -->
        <input type="submit" value="Добави заглавие" class="btn btn-primary btn-lg px-4">
    </div>
</form>

<!-- Include Bootstrap JS for responsiveness and interactivity -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
