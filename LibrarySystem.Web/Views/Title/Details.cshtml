@using LibrarySystem.Models
@model TitleViewModel

@{
    ViewData["Title"] = "Детайли за заглавие";
}

<head>
    <title>@ViewData["Title"] - Библиотечна система</title>
    <!-- Include Bootstrap CSS for better styling -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
</head>

<h1 class="mb-4 text-center">Детайли за заглавие</h1>

<div class="w-75 mx-auto p-4 border rounded shadow-sm bg-light">
    <!-- Name Field -->
    <div class="mb-3">
        <label class="form-label fw-bold">Име</label>
        <p class="form-control bg-light" readonly>@Model.Name</p>
    </div>

    <!-- Description Field -->
    <div class="mb-3">
        <label class="form-label fw-bold">Описание (Анотация)</label>
        <p class="form-control bg-light" readonly>@Model.Description</p>
    </div>

    <!-- Section Field -->
    <div class="mb-3">
        <label class="form-label fw-bold">Раздел</label>
        <p class="form-control bg-light" readonly>@Model.SectionName</p>
    </div>

    <!-- Authors Field -->
    <div class="mb-3">
        <label class="form-label fw-bold">Автор(и)</label>
        @if (Model.SelectedAuthorsNames.Any())
        {
            <ul class="list-group">
                @foreach (var author in Model.SelectedAuthorsNames)
                {
                    <li class="list-group-item">@author</li>
                }
            </ul>
        }
        else
        {
            <p class="text-muted">Няма избрани автори</p>
        }
    </div>

    <!-- Buttons -->
    <div class="d-flex justify-content-center mt-4">
        <a asp-action="AllTitles" class="btn btn-secondary btn-lg px-4">Назад</a>
    </div>
</div>

<!-- Include Bootstrap JS for responsiveness and interactivity -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
