@using LibrarySystem.Models
@model TitleViewModel

@{
    ViewData["Title"] = "Редактиране на заглавие";
}

@{
    <head>
        <title>@ViewData["Title"] - Библиотечна система</title>
    </head>

    <h1 class="mb-4 text-center">Редактиране на заглавие</h1>

    <form method="post" class="w-50 mx-auto p-4 border rounded shadow-sm bg-light">
        <!-- Name Field -->
        <div class="mb-3">
            <label for="nameInput" class="form-label fw-bold">Име</label>
            <input type="text" id="nameInput" asp-for="Name" class="form-control" placeholder="Въведи име на заглавие">
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>

        <!-- Description Field -->
        <div class="mb-3">
            <label for="descriptionInput" class="form-label fw-bold">Описание(Анотация)</label>
            <input type="text" id="descriptionInput" asp-for="Description" class="form-control" placeholder="Въведи описание">
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>

        <div>
            <label for="SectionId" class="form-label fw-bold">Раздел</label>
            <select asp-for="SectionId" class="form-control" asp-items="Model.Sections">
                <!-- <option value="null">Избери раздел</option> -->
                <!-- <span asp-validation-for="SectionId" class="text-danger"></span> -->
            </select>

            <div>
                <label for="AuthorId" class="form-label fw-bold">Автор(и)</label>
                <select asp-for="SelectedAuthors" class="form-select select2" asp-items="Model.Authors" multiple>
                </select>
            </div>

            <!-- Include jQuery & Select2 -->
            <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
            <link href="https://cdnjs.cloudflare.com/ajax/libs/select2/4.1.0-beta.1/css/select2.min.css" rel="stylesheet" />
            <script src="https://cdnjs.cloudflare.com/ajax/libs/select2/4.1.0-beta.1/js/select2.min.js"></script>

            <script>
                $(document).ready(function () {
                    $('#AuthorId').select2({
                        placeholder: "Избери автор(и)",
                        allowClear: true,
                        width: '100%'
                    });
                });
            </script>



        </div>

        <!-- Submit Button -->
        <div class="d-flex justify-content-between mt-4">
            <a asp-action="AllTitles" class="btn btn-secondary btn-lg px-4">Откажи</a>
            <input type="submit" value="Редактирай заглавие" class="btn btn-primary btn-lg px-4">
        </div>
    </form>
}