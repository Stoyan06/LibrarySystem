@{
    ViewData["Title"] = "Предупреждение";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-12 col-md-8 col-lg-6">
            <div class="card border-warning shadow">
                <div class="card-header bg-warning text-dark">
                    <h1 class="text-center mb-0 fs-4">
                        <i class="bi bi-exclamation-triangle-fill me-2"></i>
                        Невалидна операция
                    </h1>
                </div>

                <div class="card-body p-4 text-center">
                    <div class="mb-4">
                        <div class="alert-icon mb-3">
                            <i class="bi bi-x-octagon-fill text-danger" style="font-size: 3rem;"></i>
                        </div>

                        <div class="alert alert-danger py-3">
                            <p class="fw-bold mb-0">
                                В системата няма въведени автори.
                            </p>
                            <p class="mb-0">
                                Моля, добавeте автори преди да добавите заглавия!
                            </p>
                        </div>
                    </div>

                    <div class="mt-4 d-flex justify-content-center flex-wrap gap-2">
                        <a asp-action="AllTitles" class="btn btn-secondary">
                            <i class="bi bi-arrow-left me-2"></i>
                            Назад към заглавия
                        </a>
                        <a asp-controller="Author" asp-action="AllAuthors" class="btn btn-primary">
                            <i class="bi bi-people-fill me-2"></i>
                            Управление на автори
                        </a>
                        <a asp-controller="Author" asp-action="AddAuthor" class="btn btn-success">
                            <i class="bi bi-person-plus-fill me-2"></i>
                            Добави автор
                        </a>
                    </div>
                </div>

                <div class="card-footer bg-light text-center p-2">
                    <small class="text-muted">
                        <i class="bi bi-info-circle me-1"></i>
                        За да продължите, първо трябва да добавите поне един автор в системата
                    </small>
                </div>
            </div>
        </div>
    </div>
</div>

@section Styles {
    <!-- Bootstrap Icons -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">

    <style>
        /* Animation for alert icon */
        .alert-icon {
            animation: pulse 2s infinite;
        }

        @@keyframes pulse {
            0% { transform: scale(1); }
            50% { transform: scale(1.1); }
            100% { transform: scale(1); }
        }

        /* Card styling */
        .card {
            border-radius: 12px;
            overflow: hidden;
            border-width: 2px;
        }

        /* Button styling for better responsiveness */
        @@media (max-width: 575.98px) {
            .btn {
                width: 100%;
                margin-bottom: 0.5rem;
            }
        }
    </style>
}