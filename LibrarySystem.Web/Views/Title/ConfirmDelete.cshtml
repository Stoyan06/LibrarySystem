@using LibrarySystem.Models
@model Title

@{
    ViewData["Title"] = "Потвърждение за изтриване на заглавие";
}

<head>
    <title>@ViewData["Title"] - Библиотечна система</title>
    <!-- Include Bootstrap CSS for better styling -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
</head>

<h1 class="mb-4 text-center text-danger">Потвърждение за изтриване на заглавие</h1>

<div class="w-75 mx-auto p-4 border rounded shadow-sm bg-light">
    <p class="text-center fw-bold">
        Сигурни ли сте, че искате да изтриете заглавие: <span class="text-danger">"@Model.Name"</span>?
    </p>

    <form method="post" class="d-flex justify-content-center gap-3">
        <!-- Confirm Delete Button -->
        <button type="submit" class="btn btn-danger btn-lg px-4">Изтрий</button>

        <!-- Cancel Button -->
        <a asp-action="AllTitles" class="btn btn-secondary btn-lg px-4">Откажи</a>
    </form>
</div>

<!-- Include Bootstrap JS for responsiveness and interactivity -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
