@model List<SearchResults>

<div class="container mt-5">
    <h2 class="text-center fw-bold mb-4">🔍 Search Results</h2>

    @if (Model.Any())
    {
        <table class="table table-striped table-bordered table-hover">
            <thead class="thead-dark">
                <tr>
                    <th>Title</th>
                    <th>Author</th>
                    <th>Section</th>
                    <th>Year</th>
                    <th>Inventory Number</th>
                    <th>ISBN</th>
                    <th>Publishing House</th>
                    <th>Image</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var result in Model)
                {
                    <tr>
                        <td>@result.Title</td>
                        <td>@result.Author</td>
                        <td>@result.Section</td>
                        <td>@result.Year</td>
                        <td>@result.InventoryNumber</td>
                        <td>@result.Isbn</td>
                        <td>@result.PublishingHouse</td>
                        <td>
                            @if (!string.IsNullOrEmpty(result.ImageUrl))
                            {
                                <img src="@result.ImageUrl" alt="Book Image" class="img-fluid" style="max-width: 100px;" />
                            }
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p class="text-center">No results found.</p>
    }
</div>

<style>
    .table {
        width: 100%;
        margin-top: 2rem;
        font-size: 1rem;
    }

        .table th, .table td {
            padding: 12px;
            text-align: center;
        }

    .thead-dark {
        background-color: #343a40;
        color: white;
    }

    .table-striped tbody tr:nth-child(odd) {
        background-color: #f9f9f9;
    }

    .table-bordered {
        border: 1px solid #dee2e6;
    }

    .table-hover tbody tr:hover {
        background-color: #f1f1f1;
    }

    .img-fluid {
        max-width: 100%;
        height: auto;
    }

    .text-center {
        text-align: center;
    }
</style>
