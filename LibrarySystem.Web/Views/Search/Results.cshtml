@model List<SearchResults>

<div class="container mt-5">
    <h2 class="text-center fw-bold mb-4">🔍 Search Results</h2>

    @if (Model.Any())
    {
        <div class="row">
            @foreach (var item in Model)
            {
                <div class="col-md-4 mb-4">
                    <div class="card shadow-sm border-light">
                        <img src="@(string.IsNullOrEmpty(item.ImageUrl) ? "/images/default.jpg" : item.ImageUrl)" alt="Book Image" class="card-img-top" style="height: 200px; object-fit: cover;" />
                        <div class="card-body">
                            <h5 class="card-title">@item.Title</h5>
                            <p class="card-text">by @item.Author</p>
                            <p class="text-muted">Section: @item.Section | Year: @(item.Year.HasValue ? item.Year.ToString() : "N/A")</p>
                            <p class="text-muted">Publishing House: @(string.IsNullOrEmpty(item.PublishingHouse) ? "Unknown" : item.PublishingHouse)</p>
                            <p class="text-muted">Inventory Number: @(string.IsNullOrEmpty(item.InventoryNumber) ? "N/A" : item.InventoryNumber)</p>
                            <p class="text-muted">ISBN: @(string.IsNullOrEmpty(item.Isbn) ? "N/A" : item.Isbn)</p>
                            <a href="@Url.Action("Details", "LibraryUnit", new { id = item.Id })" class="btn btn-primary btn-sm">View Details</a>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <p class="text-center">No results found.</p>
    }
</div>

<style>
    .container {
        max-width: 1200px;
    }

    .card {
        border-radius: 8px;
        overflow: hidden;
    }

    .card-title {
        font-weight: bold;
        font-size: 1.1rem;
    }

    .card-body {
        padding: 15px;
    }

    .card-img-top {
        width: 100%;
        height: 200px;
        object-fit: cover;
    }

    .btn-primary {
        font-size: 0.9rem;
        padding: 8px 16px;
    }

    .text-muted {
        font-size: 0.9rem;
    }

    .mb-4 {
        margin-bottom: 1.5rem;
    }
</style>
