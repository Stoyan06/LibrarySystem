@using LibrarySystem.Models
@model IEnumerable<LibraryUnitViewModel>

@{
    ViewData["Title"] = "Бракувани единици";
}

<head>
    <title>@ViewData["Title"] - Библиотечна система</title>
    <style>
        .card {
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            border-radius: 10px;
            overflow: hidden;
        }

        .card-img-top {
            height: 200px;
            object-fit: cover;
        }

        /* Center the buttons and adjust for mobile view */
        .action-buttons {
            margin-bottom: 20px;
        }

        .action-buttons a {
            font-size: 1.1rem;
            padding: 10px 30px;
        }

        /* Responsive Design */
        @@media (max-width: 768px) {
            .card {
                margin-bottom: 20px;
            }

            .card-img-top {
                height: 150px;
            }
        }
    </style>
</head>

<h1 class="text-center mb-4">Бракувани единици</h1>

<div class="action-buttons d-flex justify-content-center mb-4">
    <!-- Search Scrapped Units Button -->
    <a asp-action="ExtendedSearchScrapped" asp-controller="Search" class="btn btn-primary">
        <i class="bi bi-search"></i> Търсене на бракувани единици
    </a>
</div>

@if (Model == null || !Model.Any())
{
    <h2 class="text-center">Няма бракувани единици в системата</h2>
}
else
{
    <div class="row">
        @foreach (var unit in Model)
        {
            <div class="col-md-4 col-sm-6 mb-4">
                <div class="card h-100">
                    <img src="@unit.Image.DestinationLink" class="card-img-top" alt="Изображение на @unit.TitleName">
                    <div class="card-body">
                        <h5 class="card-title">@unit.TitleName</h5>
                        <h6 class="card-subtitle mb-2 text-muted">Инвентарен номер: @unit.InventoryNumber</h6>
                        <p class="card-text">Състояние: @unit.Condition</p>
                    </div>
                    <div class="card-footer text-center">
                        <a asp-controller="LibraryUnit" asp-action="Details" asp-route-id="@unit.Id" class="btn btn-info btn-sm">
                            <i class="bi bi-eye"></i> Детайли
                        </a>
                    </div>
                </div>
            </div>
        }
    </div>
}
